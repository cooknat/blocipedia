<div class="wiki_create">
 <%= form_for @wiki do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title, class: 'create_body' %>
   <div class="create">
       <%= f.label :body %>
       <%= f.text_area :body, class: 'create_body', id: 'wiki_body' %>
   </div>
   <% if current_user.role == 'premium' %>
     <div>
         <%= f.label :private %>
         <%= f.check_box :private %>
     </div>
   <% end %> 
   <%= f.submit "Save", class: 'btn_create' %>
 <% end %>
 </div>
 <div class="preview">
   <label>Preview</label>
   <div id="markdown_preview"></div>
 </div>